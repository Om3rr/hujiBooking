<div class="container" style="margin:auto;">
    <div class="row">
        <div class="col-md-4 col-sm-0"></div>
        <div class="col-sm-12 col-md-4" style="margin:auto">
            <div  style="margin:auto;">
                <div class="account-wall">
                    <div id="my-tab-content" class="tab-content">
                    <div class="tab-pane active" id="login">
                        <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                             alt="">
                        <form class="form-signin" name="loginForm" id="logForm">
                            <input type="text" pattern="^[A-Za-z0-9-_\.]+$" name="user" class="form-control" placeholder="Username" required autofocus ng-model="signin.user">
                            <label class="indicator" ng-class="{'invalid' : loginForm.user.$invalid}">Invalid Username</label>
                            <input type="password" pattern="^(?=\S*[^\s])\S{4,}$" name="pass" class="form-control" placeholder="Password" required ng-model="signin.pass">
                            <label class="indicator" ng-class="{'invalid' : loginForm.pass.$invalid}">Invalid Password</label>
                            <button class="btn btn-lg btn-default btn-block" value="Sign In" ng-click="sign()">Sign In</button>
                        </form>
                        <div id="tabs" data-tabs="tabs">
                            <p class="text-center"><a href="#regForm" data-toggle="tab">Need an Account?</a></p>
                            <p class="text-center"><a href="#forgot" data-toggle="tab" ng-if="reseted">Forgot your pass?</a></p>
                        </div>
                    </div>
                    <div class="tab-pane" id="regForm">
                        <form class="form-signin" name="signForm">
                            <input type="text" pattern="^[A-Za-z0-9-_\.]+$" class="form-control" placeholder="CS Username" required autofocus name="user" ng-model="register.user">
                            <label class="indicator" ng-class="{'invalid' : signForm.user.$invalid}">Invalid Username</label>
                            <input type="text" pattern="^[A-Za-z]+ [A-Za-z]+$" class="form-control" placeholder="Full name" required name="name" ng-model="register.name">
                            <label class="indicator" ng-class="{'invalid' : signForm.name.$invalid}">Invalid Full name</label>
                            <input type="password" placeholder="not your original cs password!" pattern="^(?=\S*[^\s])\S{4,}$" class="form-control" placeholder="Password" required name="pass" ng-model="register.pass">
                            <label class="indicator" ng-class="{'invalid' : signForm.pass.$invalid}">Invalid Password</label>
                            <button class="btn btn-lg btn-default btn-block" value="Sign Up" ng-click="reg()">Sign Up</button>
                        </form>
                        <div id="tabs" data-tabs="tabs">
                            <p class="text-center"><a href="#logForm" id="haveAccount" data-toggle="tab">Have an Account?</a></p>
                        </div>
                    </div>
                    <div class="tab-pane" id="forgot">
                        <form class="form-signin" name="resetForm">
                            <input type="text" pattern="^[A-Za-z0-9-_\.]+$" class="form-control" placeholder="CS Username" required autofocus name="user" ng-model="forgot.username">
                            <button class="btn btn-lg btn-default btn-block" value="Sign Up" ng-click="resetPass()">Reset Password</button>
                        </form>
                        <div id="tabs" data-tabs="tabs">
                            <p class="text-center"><a href="#logForm" data-toggle="tab">Have an Account?</a></p>
                            <p class="text-center"><a href="#regForm" data-toggle="tab">Need an Account?</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <div class="col-md-4 col-sm-0"></div>
    </div>
</div>