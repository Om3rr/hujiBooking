<div class="container">
    <ul class="nav nav-pills nav-justified">
        <li ng-repeat="date in dates" ng-class="{active : selected(date), disabled : datePass(date)}">
            <a ng-click="selectDate(date)">{{date.format('DD-MM-YYYY')}}</a>
        </li>
    </ul>
    <table class="table table-hover table-responsive" style="overflow-x: hidden">
        <thead>
        <tr>
            <th>Slot / Room</th>
            <th ng-repeat="room in rooms">{{room.r_name}}</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="timeFrame in getNumber(maxFrame)">
            <td>{{slotAndRoomToTime(timeFrame)}}</td>
            <td ng-repeat="room in rooms">
                <input ng-disabled="isSlotPassed[timeFrame]" type="checkbox" ng-if="slotFree(room, timeFrame)" ng-model="checkBoxes[activeDate.toLocaleString() + ',' + room.r_id + ',' + timeFrame]">
                <span ng-if="!slotFree(room, timeFrame)"><span ng-repeat="user in getUserName(room, timeFrame)">{{user}}<br> </span></span>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="row" style="text-align: center;">
        <button style="margin:auto; padding: 10px 70px; " class="btn btn-primary" ng-click="sendSlots()">Submit</button>
    </div>
</div>